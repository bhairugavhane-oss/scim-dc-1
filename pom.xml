    <artifactId>miniorange-usersync-jira</artifactId>
    <version>3.1.2</version>

    <organization>
        <name>miniOrange</name>
        <url>http://miniorange.com/</url>
    </organization>

    <name>User Provisioning/Sync for Jira</name>
    <description>This is the miniOrange User Sync plugin, which supports Keycloak, Okta, OneLogin, G Suite and Microsoft Azure AD.</description>
    <packaging>atlassian-plugin</packaging>

    <dependencies>
        <dependency>
            <groupId>com.miniorange.usersync</groupId>
            <artifactId>common-usersync</artifactId>
            <version>1.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.atlassian.jira</groupId>
            <artifactId>jira-api</artifactId>
            <version>${jira.version}</version>
            <scope>provided</scope>
        </dependency>

